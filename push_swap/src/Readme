t_move get_best_move(t_list *a, t_list *b);

int greedy_sort(t_list **a, t_list **b)
{
int count = 0;
while (*b)
{
t_move move = get_best_move(*a, *b);
count += execute_move(a, b, move);
}
return count;
}

